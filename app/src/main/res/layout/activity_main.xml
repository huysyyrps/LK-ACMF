<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/theme_back_color"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_logo2"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tbLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/theme_back_color"
                    app:tabIndicatorColor="@color/red"
                    app:tabMinWidth="90dp"
                    app:tabSelectedTextColor="@color/red"
                    app:tabTextColor="@color/theme_color">

            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="52dp"
                android:layout_marginRight="2dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="800dp"
                        android:layout_height="350dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:cardCornerRadius="10dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                style="@style/headerText"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="BX"
                                android:textColor="@color/theme_color" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/lineChartTest"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="left"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1"
                                android:background="@color/theme_back_color" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">

                    <LinearLayout
                            android:id="@+id/linBX"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                style="@style/headerText"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="BX"
                                android:textColor="@color/theme_color" />

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                            <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/lineChartBX"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="2dp"
                                    android:layout_weight="1"
                                    android:background="@color/theme_back_color" />

                            <androidx.cardview.widget.CardView
                                    android:id="@+id/yAxixSetting"
                                    android:layout_width="35dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="10dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:visibility="gone">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                    <ImageView
                                            android:id="@+id/ivAdd"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:padding="7dp"
                                            android:src="@drawable/ic_yaxis_add"/>
                                    <ImageView
                                            android:id="@+id/ivDown"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:padding="7dp"
                                            android:src="@drawable/ic_yaxis_down"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">

                    <LinearLayout
                            android:id="@+id/linBZ"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="BZ"
                                android:textColor="@color/theme_color"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/lineChartBZ"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="left"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1"
                                android:background="@color/theme_back_color" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="6"
                        app:cardCornerRadius="10dp">

                    <LinearLayout
                            android:id="@+id/linDX"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                style="@style/headerText"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="蝶形图"
                                android:textColor="@color/theme_color" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/lineChart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="6"
                                android:background="@color/theme_back_color" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="6"
                        app:cardCornerRadius="10dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                style="@style/headerText"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="测量数据"
                                android:textColor="@color/theme_color" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:background="@color/theme_back_color"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:text="深度系数：1"
                                    android:textSize="20dp"
                                    android:layout_marginTop="20dp"
                                    android:textColor="@color/theme_color" />

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:text="长度：1266mm"
                                    android:textSize="20dp"
                                    android:textColor="@color/theme_color" />

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:text="深度：666mm"
                                    android:textSize="20dp"
                                    android:textColor="@color/theme_color" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/theme_back_color"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_drawer_backcolor"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="当前版本："
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp" />
                <TextView
                        android:id="@+id/tvCurrentVersion"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="V1.0.X"
                        android:textColor="@color/red"
                        android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <com.example.lkacmf.view.BaseLinlayout
                android:id="@+id/linSetting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:drawer_title="@string/setting" />
        <View
                style="@style/HLine"
                android:layout_height="0.5dp" />

        <com.example.lkacmf.view.BaseLinlayout
                android:id="@+id/linImageList"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:drawer_image_left="@drawable/ic_image_list"
                app:drawer_title="@string/image_list" />
        <View
                style="@style/HLine"
                android:layout_height="0.5dp" />

        <com.example.lkacmf.view.BaseLinlayout
                android:id="@+id/linVersionCheck"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:drawer_image_left="@drawable/ic_vrsion_check"
                app:drawer_title="@string/version_check" />
        <View
                style="@style/HLine"
                android:layout_height="0.5dp" />

        <com.example.lkacmf.view.BaseLinlayout
                android:id="@+id/linContactComp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:drawer_image_left="@drawable/ic_contact_comp"
                app:drawer_title="@string/contact_comp" />
        <View
                style="@style/HLine"
                android:layout_height="0.5dp" />


        <com.example.lkacmf.view.BaseButton
                android:id="@+id/btnFinish"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:text="@string/exit_project"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:bg_corner="5dp" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>